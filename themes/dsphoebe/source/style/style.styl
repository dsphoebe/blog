color=#1e73cf

body,
p,
h1,
h2,
pre
    margin: 0
    padding: 0
    font-weight: normal

h2
    margin-top: 2rem
h3
    margin-top: 1.5rem

table
    border-collapse: collapse
    margin: .5rem 0
td, th
    border: 1px solid #363b40
    padding: .5rem 1rem

body
    background: #252526
    line-height: 2
    font-weight: 100;
    color: #fff

a
    text-decoration: none
    color: color
    &:hover
        text-decoration: underline

.header,
.post-meta
    ul,
    li
        list-style: none
        padding: 0
        margin: 0

.header
    h1
        width: 1000px
        margin: 3rem auto
        text-align: center
        color: color
        font-weight: normal
    
.navbar
    background: #2d2d2d
    margin: 0 0 1rem
    .menu
        width: 1000px
        margin: 0 auto
        border-left: 1px solid #252525
        
    li
        display: inline-block
        padding: 0 2rem
        border-right: 1px solid #252525
        &, a
            color: #999
            

.main
    width: 1000px
    margin: 0 auto 5rem
    min-height: calc(100vh - 279px)

    .post
        margin: 0 0 3rem
        padding: .5rem 2rem 6rem
        background: #1e1e1e
        color: #ccc
    .post-meta
        margin: 0 0 .5rem
    .post-date,
    .post-time
        margin-right: .5rem
    .post-time
        color: #555
    .post-title
        font-size: 1.25rem
        a
            color: inherit
    .article-tag-list
        display: inline-block
    .article-tag-list-item
        display: inline-block
        padding: 0 .5rem 0 0

footer
    background: color
    color: #fff
    font-size: .25rem
    p
        width: 1000px
        margin: 0 auto
    a
        color: #fff

code,
.highlight table
    background: rgba(255,255,255,.2)
    border: 1px solid rgba(255,255,255,.4)
    border-width: 1px 0
code
    padding: .5rem
.highlight table
    .gutter
        background: rgba(255,255,255,.3)
        padding: 0 .5rem
    .code
        background: rgba(255,255,255,.2)
        padding: 0 .5rem